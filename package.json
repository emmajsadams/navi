{
  "name": "navi",
  "version": "0.1.0",
  "module": "src/main.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "oxfmt": "^0.33.0",
    "oxlint": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun --watch run src/main.ts",
    "test": "bun test",
    "lint": "oxlint src/",
    "fmt": "oxfmt --write src/",
    "fmt:check": "oxfmt --check src/",
    "check": "bun run lint && bun run fmt:check && bun run test",
    "prepare": "husky"
  },
  "type": "module"
}
